<section class="bg-gradient-to-r from-green-50 to-green-100 py-16">
  <h2 class="text-4xl font-extrabold text-center text-green-900 mb-8">Contact Us</h2>
  <p class="text-lg text-gray-800 text-center max-w-2xl mx-auto mb-8">
    Have questions or suggestions? We'd love to hear from you! Use the form below to get in touch with us, and weâ€™ll get back to you as soon as possible.
  </p>
  
  <div class="max-w-4xl mx-auto bg-white p-8 rounded-lg shadow-lg">
    <form action="/about-contacts" method="POST" class="space-y-6">
      <!-- Name -->
      <div>
        <label for="name" class="block text-lg font-medium text-gray-700">Your Name</label>
        <input type="text" id="name" name="name" class="w-full border border-gray-300 rounded-lg px-4 py-2 mt-2 focus:ring-green-500 focus:border-green-500" placeholder="Enter your name" required>
      </div>
      
      <!-- Email -->
      <div>
        <label for="email" class="block text-lg font-medium text-gray-700">Your Email</label>
        <input type="email" id="email" name="email" class="w-full border border-gray-300 rounded-lg px-4 py-2 mt-2 focus:ring-green-500 focus:border-green-500" placeholder="Enter your email" required>
      </div>
      
      <!-- Message -->
      <div>
        <label for="message" class="block text-lg font-medium text-gray-700">Your Message</label>
        <textarea id="message" name="message" rows="5" class="w-full border border-gray-300 rounded-lg px-4 py-2 mt-2 focus:ring-green-500 focus:border-green-500" placeholder="Type your message here" required></textarea>
      </div>
      
      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="bg-green-600 text-white font-medium text-lg px-6 py-3 rounded-lg shadow-lg hover:bg-green-700 focus:ring focus:ring-green-300 transition">Send Message</button>
      </div>
    </form>
  </div>
</section>
