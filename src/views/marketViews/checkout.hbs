<section class="container mx-auto py-12">
  <h1 class="text-3xl font-bold text-gray-800 mb-8">Checkout</h1>

  <form method="POST" action="/orders/create" class="bg-white shadow-lg rounded-lg p-8 space-y-6">
    <!-- Delivery Information -->
    <div>
      <h2 class="text-2xl font-bold text-gray-700 mb-4">Delivery Information</h2>
      
      <label for="name" class="block text-lg font-medium text-gray-600">Full Name</label>
      <input type="text" id="name" name="name" class="w-full border rounded-lg px-4 py-2 text-gray-800" required />

      <label for="address" class="block text-lg font-medium text-gray-600 mt-4">Address</label>
      <textarea id="address" name="address" class="w-full border rounded-lg px-4 py-2 text-gray-800" rows="3" required></textarea>

      <label for="phone" class="block text-lg font-medium text-gray-600 mt-4">Phone Number</label>
      <input type="tel" id="phone" name="phone" class="w-full border rounded-lg px-4 py-2 text-gray-800" required />
    </div>

    <!-- Order Summary -->
    <div>
      <h2 class="text-2xl font-bold text-gray-700 mb-4">Order Summary</h2>

      {{#each cart}}
      <div class="flex justify-between items-center border-b py-4">
        <span class="text-lg font-medium text-gray-800">{{this.pizzaName}} ({{this.quantity}})</span>
        <span class="text-lg font-medium text-gray-600">${{this.totalPrice}}</span>
      </div>
      {{/each}}

      <div class="flex justify-between items-center mt-4 text-xl font-bold text-gray-800">
        <span>Total:</span>
        <span>${{cartTotal}}</span>
      </div>
    </div>

    <!-- Place Order Button -->
    <button type="submit" class="w-full bg-green-600 text-white text-lg font-medium py-3 px-6 rounded-lg shadow-lg hover:bg-green-700 transition">
      Place Order
    </button>
  </form>
</section>
