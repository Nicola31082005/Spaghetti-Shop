<section class="container mx-auto py-12">
  <!-- Back to Pizzas -->
  <a href="/pizzas" class="inline-flex items-center text-blue-600 text-lg font-medium hover:text-blue-800 transition mb-6">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 mr-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
    </svg>
    Back to Pizzas
  </a>

  <div class="bg-white rounded-lg shadow-lg p-8 flex flex-col lg:flex-row gap-12 items-start">
    <!-- Pizza Image -->
    <img src="{{pizza.imageUrl}}" alt="{{pizza.name}}" class="w-full lg:w-1/2 h-auto max-h-[500px] object-cover rounded-lg shadow-md border border-gray-200">

    <!-- Pizza Details -->
    <div class="flex-grow space-y-6">
      <h1 class="text-5xl font-bold text-gray-800">{{pizza.name}}</h1>
      <p class="text-gray-600 text-lg leading-relaxed">{{pizza.description}}</p>
      
      <div class="flex items-center space-x-4">
        <span class="text-3xl font-bold text-green-600">${{pizza.price}}</span>
        <span class="bg-yellow-200 text-yellow-800 text-xs font-medium px-3 py-1 rounded-full uppercase">{{pizza.category}}</span>
      </div>
      
      <!-- Add to Cart Button -->
      <div>
        <a href="/cart/add/{{pizza.id}}" class="inline-block bg-blue-600 text-white text-lg font-medium py-3 px-6 rounded-lg shadow-lg hover:bg-blue-700 focus:ring focus:ring-blue-300 transition">
          Add to Cart
        </a>
      </div>

      <!-- Customize Pizza -->
      <div class="bg-gray-50 border rounded-lg p-6 mt-6">
        <h2 class="text-2xl font-bold text-gray-700 mb-4">Customize Your Pizza</h2>
        <form method="POST" action="/cart/customize/{{pizza.id}}">
          <!-- Select Dough -->
          <div class="mb-4">
            <label for="dough" class="block text-lg font-medium text-gray-600 mb-2">Choose Dough</label>
            <select id="dough" name="dough" class="w-full border rounded-lg px-4 py-2 text-gray-800">
              <option value="small">Small (8 inches)</option>
              <option value="medium">Medium (12 inches)</option>
              <option value="large">Large (16 inches)</option>
            </select>
          </div>

          <!-- Ingredients -->
          <div class="mb-4">
            <label class="block text-lg font-medium text-gray-600 mb-2">Add/Remove Ingredients</label>
            <div class="space-y-2">
              {{#each pizza.ingredients}}
              <div>
                <input type="checkbox" id="ingredient-{{this}}" name="ingredients" value="{{this}}" checked class="mr-2">
                <label for="ingredient-{{this}}" class="text-gray-800">{{this}}</label>
              </div>
              {{/each}}
            </div>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="bg-green-600 text-white text-lg font-medium py-2 px-4 rounded-lg hover:bg-green-700 focus:ring focus:ring-green-300 transition">
            Update Pizza
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
