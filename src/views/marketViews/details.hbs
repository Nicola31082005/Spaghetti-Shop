<section class="container mx-auto py-12">
  <!-- Back to Pizzas -->
  <a href="/pizzas" class="inline-flex items-center text-blue-600 text-lg font-medium hover:text-blue-800 transition mb-6">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 mr-2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
    </svg>
    Back to Pizzas
  </a>

  <div class="bg-white rounded-lg shadow-lg p-8 flex flex-col lg:flex-row gap-12 items-start">
    <!-- Pizza Image -->
    <img src="{{pizza.imageUrl}}" alt="{{pizza.name}}" class="w-full lg:w-1/2 h-auto max-h-[500px] object-cover rounded-lg shadow-md border border-gray-200">

    <!-- Pizza Details -->
    <div class="flex-grow space-y-6">
      <h1 class="text-5xl font-bold text-gray-800">{{pizza.name}}</h1>
      <p class="text-gray-600 text-lg leading-relaxed">{{pizza.description}}</p>
      
      <div class="flex items-center space-x-4">
        <span class="text-3xl font-bold text-green-600">${{pizza.price}}</span>
        <span class="bg-yellow-200 text-yellow-800 text-xs font-medium px-3 py-1 rounded-full uppercase">{{pizza.category}}</span>
      </div>
    
      <!-- Customize and Add to Cart Form -->
      <div class="bg-gray-50 border rounded-lg p-6 mt-6">
        <h2 class="text-2xl font-bold text-gray-700 mb-4">Customize and Add to Cart</h2>
        <form method="POST" action="/cart/add/{{pizza.id}}">
          <!-- Select Dough -->
          <div class="mb-4">
            <label for="dough" class="block text-lg font-medium text-gray-600 mb-2">Choose Dough</label>
            <select id="dough" name="dough" class="w-full border rounded-lg px-4 py-2 text-gray-800">
              <option value="Small">Small (8 inches)</option>
              <option value="Medium">Medium (12 inches)</option>
              <option value="Large">Large (16 inches)</option>
            </select>
          </div>

          <!-- Collapsible Ingredients Section -->
          <div class="mb-4">
            <button type="button" id="toggle-ingredients" class="bg-gray-200 text-gray-800 text-lg font-medium py-2 px-4 rounded-lg hover:bg-gray-300 focus:ring focus:ring-gray-400 transition">
              Add/Remove Ingredients
            </button>

            <div id="ingredients-section" class="hidden mt-4 space-y-2">
              {{#each ingredients}}
              <div>
                <input type="checkbox" id="ingredient-{{this.name}}" name="ingredients" value="{{this.name}}" {{#if this.isRequired }} checked disabled {{/if}} class="mr-2"/>
                <label for="ingredient-{{this.name}}" class="text-gray-800">{{this.name}}</label>
              </div>
              {{/each}}
            </div>
            
          </div>

          <!-- Quantity -->
          <div class="mb-4">
            <label for="quantity" class="block text-lg font-medium text-gray-600 mb-2">Quantity</label>
            <input type="number" id="quantity" name="quantity" value="1" min="1" class="w-full border rounded-lg px-4 py-2 text-gray-800"/>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="bg-blue-600 text-white text-lg font-medium py-3 px-6 rounded-lg shadow-lg hover:bg-blue-700 focus:ring focus:ring-blue-300 transition">
            Add to Cart
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script src="public/src/index.js"></script>
