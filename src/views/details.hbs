<section class="container mx-auto py-12">
  <!-- Back to Pizzas -->
  <a href="/pizzas" class="text-blue-600 hover:underline text-sm flex items-center mb-6">
    ‚Üê Back to Pizzas
  </a>
  
  <div class="flex flex-col lg:flex-row gap-8 items-center lg:items-start">
    <!-- Pizza Image -->
    <img src="{{pizza.imageUrl}}" alt="{{name}}" class="w-full lg:w-1/2 h-auto max-h-[500px] object-cover rounded-lg shadow-md">
    
    <!-- Pizza Details -->
    <div class="flex-grow">
      <h1 class="text-4xl font-bold text-gray-800">{{pizza.name}}</h1>
      <p class="text-gray-600 mt-4 text-lg">{{pizza.description}}</p>
      
      <div class="mt-6">
        <span class="text-2xl font-bold text-green-600">${{pizza.price}}</span>
      </div>
      
      <!-- Add to Cart Button -->
      <div class="mt-8">
        <a href="/cart/add/{{pizza.id}}" class="bg-blue-600 text-white text-lg font-medium py-3 px-6 rounded-lg shadow hover:bg-blue-700 transition">
          Add to Cart
        </a>
      </div>
    </div>
  </div>
</section>
